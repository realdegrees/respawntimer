    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug Bot",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "args": [
                "debug"
            ],
            "program": "${workspaceFolder}/dist/src/index.js",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}